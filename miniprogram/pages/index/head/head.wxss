/* 店家信息 */
.top{
  background: #2e2f3b;
  box-sizing: border-box;
  width: 100%;
  height: 250rpx;
  padding: 20rpx 30rpx;
}
.top .top-logo {
  width: 200rpx;
  height: 200rpx;
  float: left
}
.top .top-logo image {
  width: 100%;
  height: 100%;
}
.top .top-info {
  width: calc(100% - 200rpx);
  color: #fff;
  box-sizing: border-box;
  padding: 0 30rpx;
  font-size: 30rpx;
  float: right
}
.top .top-info .top-title {
  font-size: 50rpx;
  margin-bottom: 30rpx; 
}
/* 导航菜单 */
.nav-active {
  width: 100%;
  height: 100rpx;
  border-bottom: 1px solid #979797;
  background: #f5f5f5;
}
.nav-active .nav-item {
  width: 33%;
  height: 100rpx;
  float: left;
  text-align: center;
  line-height: 100rpx;
  color: #727271;
}
.nav-active .nav-item.cur{
  color: #2e2f3b;
  font-weight: bold;
  position: relative;
}
.nav-active .nav-item.cur:after {
  content: "111";
  display: block;
  width: 50rpx;
  height: 10rpx;
  background: rgb(245, 167, 51);
  position: absolute;
  bottom: -2px;
  left: 50%;
  margin-left: -25rpx;
}