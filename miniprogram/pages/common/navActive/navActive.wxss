/* 导航菜单 */
.nav-active {
  width: 100%;
  height: 100rpx;
  border-bottom: 1px solid #979797;
  background: #f5f5f5;
}
.nav-active .nav-item {
  width: 33%;
  height: 100rpx;
  float: left;
  text-align: center;
  line-height: 100rpx;
  color: #727271;
}
.nav-active .nav-item.cur{
  color: #2e2f3b;
  font-weight: bold;
  position: relative;
}
.nav-active .nav-item.cur:after {
  content: "111";
  display: block;
  width: 50rpx;
  height: 10rpx;
  background: rgb(245, 167, 51);
  position: absolute;
  bottom: -2px;
  left: 50%;
  margin-left: -25rpx;
}