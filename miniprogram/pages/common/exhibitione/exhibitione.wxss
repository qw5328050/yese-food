.exhibitione {
  margin-top: 20rpx;
  height: 180rpx;
  color: #383838;
  background: #f7f7f7;
  padding: 20rpx 30rpx;
}
.exhibitione .exhibitione-image {
  width: 200rpx;
  height: 100%;
  float: left
}
.exhibitione .exhibitione-image image {
  width: 100%;
  height: 100%;
}
.exhibitione .exhibitione-details {
  width: calc(100% - 200rpx);
  float: left;
  padding: 0 25rpx;
  box-sizing: border-box; 
}
.exhibitione .exhibitione-details text {
  padding: 0 20rpx;
}
.exhibitione-operation {
  margin-top: 10rpx;
}
.exhibitione-btn {
  width: 40%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  float: left;
  color: #fff;
  background: #07c160;
  border-radius: 15rpx;
  margin: 10rpx 20rpx;
}